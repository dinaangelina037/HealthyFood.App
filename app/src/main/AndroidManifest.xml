<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dina.resepmakanan">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_healthy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_healthy"
        android:supportsRtl="true"
        android:theme="@style/Theme.ResepMakanan"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".acitivity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".acitivity.PerkategoriActivity"
            android:exported="true" />
        <activity
            android:name=".acitivity.DetailActivity"
            android:exported="true" />
        <activity
            android:name=".acitivity.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>